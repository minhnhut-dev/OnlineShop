<div class="header">
  <nav class="navbar navbar-expand-lg navbar-light d-flex header">
    <a class="navbar-brand" href="/">
      <%= image_tag "logo-nbstore.png",alt:"Logo"%>
    </a>
    <form class="form-inline my-2 my-lg-0">
      <input
        class="form-control mr-sm-2 _input_search"
        type="search"
        placeholder="Bạn cần tìm gì?"
        aria-label="Search"
      />
      <button type="button" class="btn btn-primary _btn_search">
        <i class="fas fa-search"></i>
      </button>
    </form>
    <div class="pdl0 fl1">
      <div class="onlineshop-right-top-block">
        
        <% if current_user %>
        <a class="onlineshop-right-item" href="/">
          <img
            src="//theme.hstatic.net/1000026716/1000440777/14/ak1.png?v=21636"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text"><%= current_user.name%></span>
          </div>
        </a>
        <%= link_to destroy_user_session_path	, class: "onlineshop-right-item", method: :delete do %>
          <img
            src="//theme.hstatic.net/1000026716/1000440777/14/ak1.png?v=21636"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text">Đăng xuất</span>
          </div>
        <% end %>
        <% else %>
        <%= link_to new_user_registration_path, class: "onlineshop-right-item", method: :get do %>
          <img
            src="//theme.hstatic.net/1000026716/1000440777/14/ak1.png?v=21636"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text">Đăng ký</span>
          </div>
          <% end %>
          <%= link_to new_user_session_path, class: "onlineshop-right-item", method: :get do %>
          <img
            src="//theme.hstatic.net/1000026716/1000440777/14/ak1.png?v=21636"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text">Đăng nhập</span>
          </div>
          <% end %>
          
        <% end %>

        <a class="onlineshop-right-item" href="/">
          <img
            src="https://theme.hstatic.net/1000026716/1000440777/14/ak4.png?v=21637"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text">Khuyến mại</span>
          </div>
        </a>
        <a class="onlineshop-right-item cart" href="/carts">
          <% if session[:cart]== nil %>
              <div class="online-shop-number">0</div>
          <%else%>
              <div class="online-shop-number"><%= session[:cart].size%></div>
          <%end%>
          <img
            src="https://theme.hstatic.net/1000026716/1000440777/14/ak5.png?v=21636"
            alt="register"
          />
          <div class="header-right-description">
            <span class="onlineshop-text">giỏ hàng</span>
          </div>
        </a>
      </div>
    </div>
  </nav>
</div>
<%= render "header/banner" %>


